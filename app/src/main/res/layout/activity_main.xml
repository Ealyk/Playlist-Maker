<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_main_background"
    tools:context="ui.MainActivity"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/header_margin"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <Button
                style="@style/EmptyButtonStyle"
                android:layout_width="@dimen/header_buttons_weight"
                android:layout_height="wrap_content"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ys_display_medium"
                    android:textFontWeight="500"
                    android:textSize="@dimen/main_manu_button_size"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="12dp"
                    />


                <Button
                    style="@style/EmptyButtonStyle"
                    android:layout_width="12dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="130dp"
                    android:layout_marginBottom="16dp"
                    tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

            </LinearLayout>

            <Button
                style="@style/EmptyButtonStyle"
                android:layout_width="@dimen/header_buttons_weight"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="8dp"
        >
        <Button
            android:id="@+id/button_search"
            android:text="@string/search"
            style="@style/MainMenuButtonStyle"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
             />


        <Button
            android:id="@+id/button_media"
            style="@style/MainMenuButtonStyle"
            android:text="@string/media_library"
            app:icon="@drawable/media_library"
            app:iconGravity="textStart"/>

        <Button
            android:id="@+id/button_settings"
            style="@style/MainMenuButtonStyle"
            android:text="@string/settings"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            />
    </LinearLayout>
</LinearLayout>

