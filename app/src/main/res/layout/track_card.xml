<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    android:id="@+id/trackCard"
    android:backgroundTint="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/trackCardImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="13dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/trackCardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Yesterday (Remastered 2009)"
                    android:textSize="@dimen/content_settings_text"
                    android:textFontWeight="400"
                    android:fontFamily="@font/ys_display_regular"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    >
                    <TextView
                        android:id="@+id/trackCardNameArtist"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:fontFamily="@font/ys_display_regular"
                        android:textSize="11sp"
                        android:layout_gravity="start"
                        android:gravity="start"
                        tools:text="The Bittles"
                        android:textColor="@color/items_settings"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/dot"
                        android:gravity="start"
                        android:layout_gravity="start"
                        app:tint="@color/items_settings"
                        />
                    <TextView
                        android:id="@+id/trackCardTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/ys_display_regular"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:gravity="start"
                        android:layout_gravity="start"
                        tools:text="2:55"
                        android:textColor="@color/items_settings"/>
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:id="@+id/trackCardArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"

                android:clickable="true"
                android:focusable="true"
                android:minWidth="24dp"
                android:minHeight="24dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_forward"
                    app:tint="@color/items_settings" />
            </FrameLayout>

        </LinearLayout>



    
</androidx.cardview.widget.CardView>