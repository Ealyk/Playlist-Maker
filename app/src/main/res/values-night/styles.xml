<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/content_settings_margin_start</item>
        <item name="android:layout_marginTop">@dimen/content_settings_margin_height</item>
        <item name="android:layout_marginBottom">26sp</item>
        <item name="android:textSize">@dimen/content_settings_text</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/content_settings_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/main_manu_button_radius</item>
        <item name="android:layout_marginEnd">@dimen/main_manu_button_radius</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_custom</item>
        <item name="android:textSize">@dimen/main_manu_button_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">@dimen/main_manu_button_radius</item>
        <item name="iconTint">@color/black_custom</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ImageSettingsStyle">
        <item name="tint">@color/items_settings</item>
        <item name="android:layout_marginBottom">@dimen/margin_settings_image_end</item>
        <item name="android:layout_marginEnd">@dimen/margin_settings_image_end</item>
        <item name="android:layout_marginTop">@dimen/margin_settings_image_top</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>
    <style name="EmptyButtonStyle">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:text">b</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

</resources>